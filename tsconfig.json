{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "skipDefaultLibCheck": true,
    "lib": [
      "es2016"
    ],
    "types": [
      "node",
      "koa"
    ]
  }
}
